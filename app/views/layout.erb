  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Sinatra Wine Archive App</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>

  <body>
    <div class="navigation">
       <br>
       <% if logged_in? %>
          <div style="display:inline-block;
                border:5px solid rgb(129, 14, 32);
                border-radius:12px;
                padding:6px;
                background:
                linear-gradient(to bottom,rgb(250, 246, 246),rgb(171, 101, 130));
                color:rgb(5, 2, 19)">
          <a href="/wine_entries">View All Wines In Archive</a>
          </div>
            <br>
            <br>
          <div style="display:inline-block;
                border:5px solid rgb(129, 14, 32);
                border-radius:12px;
                padding:6px;
                background:
                linear-gradient(to bottom,rgb(250, 246, 246),rgb(171, 101, 130));
                color:rgb(5, 2, 19)">
          <a href="/wine_entries/new">New Wine Entry</a>
          </div>
            <br>
            <br>
          <div style="display:inline-block;
                border:5px solid rgb(129, 14, 32);
                border-radius:12px;
                padding:6px;
                background:
                linear-gradient(to bottom,rgb(250, 246, 246),rgb(171, 101, 130));
                color:rgb(5, 2, 19)">
          <a href="/logout">Logout</a>
          </div>
        <% end %>
    </div> 
   
    <div class="wrapper">

      <% if flash[:message] %>
        <h3><em><%= flash[:message] %></h3></em>
      <% end %>
      <% if flash[:errors] %>
        <h3 style="color: red;"><em><%= flash[:errors] %></h3></em>
      <% end %>
    
      <%= yield %>
      
      <footer class="branding">
        <small>&copy; 2021 <strong>Sinatra Wine Archive App</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
